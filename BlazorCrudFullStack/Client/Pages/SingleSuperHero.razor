@page "/singlesuperhero/"
@inject ISuperHeroService SuperHeroServiceClass
<PageTitle>Super Heroes Component</PageTitle>
<h3>Super Heroes</h3>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hero Name</th>
            <th>Comic ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hero in SuperHeroServiceClass.Heroes)
        {
            <tr>
                <td>@hero.Id</td>
                <td>@hero.FirstName</td>
                <td>@hero.LastName</td>
                <td>@hero.ComicId</td>

            </tr>
        }
    </tbody>
</table>

@code {
    protected override async Task OnInitializedAsync()
    {
        await SuperHeroServiceClass.GetSingleHero(1);
    }
}

